<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowResultActivity"
    android:background="#F8DBE5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/round_no_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round 0"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#E7165C"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/round_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ROUND 0 Result"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#E7165C"
            />
        <TextView
            android:id="@+id/player1_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 1: "
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#EB3974"
            />
        <TextView
            android:id="@+id/player2_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 2: "
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#EB3974"
            />
        <TextView
            android:id="@+id/player3_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 3: "
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#EB3974"
            />

        <TextView
            android:id="@+id/player4_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Player 4: "
            android:textColor="#EB3974"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Score"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#E7165C"
            />
        <TextView
            android:id="@+id/player1_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 1: "
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#EB3974"
            />
        <TextView
            android:id="@+id/player2_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 2: "
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#EB3974"
            />
        <TextView
            android:id="@+id/player3_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 3: "
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#EB3974"
            />

        <TextView
            android:id="@+id/player4_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Player 4: "
            android:textColor="#EB3974"
            android:textSize="20sp" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Round"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#E7165C"
            android:layout_marginTop="30dp"
            android:background="#ECBBBB"/>

    </LinearLayout>

</LinearLayout>