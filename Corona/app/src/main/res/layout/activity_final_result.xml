<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalResultActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#88B1D1">

    <TextView
        android:id="@+id/player1_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1st"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#1B2C69"
        />
    <TextView
        android:id="@+id/player2_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2nd"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#1B2C69"
        />
    <TextView
        android:id="@+id/player3_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3rd"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#1B2C69"
        />

    <TextView
        android:id="@+id/player4_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="4th"
        android:textColor="#1B2C69"
        android:textSize="20sp" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:background="#99A3C4"
        android:textColor="#1B2C69"
        android:textStyle="bold"/>

</LinearLayout>