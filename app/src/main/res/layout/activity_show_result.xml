<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowResultActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:textColor="#571263"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:id="@+id/round_no_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1st Round"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textColor="#F4F3F1"
            android:background="#186FB5"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/round_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ROUND 0 Result"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#F4F3F1"
            android:background="#03A9F4"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Faria"/>

                <TextView
                    android:id="@+id/first_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="100"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/second_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Faria"/>

                <TextView
                    android:id="@+id/second_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="100"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/third_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Faria"/>

                <TextView
                    android:id="@+id/third_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="100"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/fourth_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Faria"/>

                <TextView
                    android:id="@+id/fourth_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="100"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Result"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#F4F3F1"
            android:background="#03A9F4"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/total_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Faria"/>

                <TextView
                    android:id="@+id/total_first_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="100"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/total_second_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Faria"/>

                <TextView
                    android:id="@+id/total_second_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="100"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/total_third_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Faria"/>

                <TextView
                    android:id="@+id/total_third_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="100"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/total_fourth_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Faria"/>

                <TextView
                    android:id="@+id/total_fourth_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="100"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

